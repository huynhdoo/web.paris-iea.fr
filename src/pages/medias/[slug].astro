---
import { CollectionEntry, getCollection } from "astro:content";
import Details from "@layouts/medias/Details.astro";
import List from "@layouts/medias/List.astro";
import getSortedPosts from "@utils/getSortedPosts";
import getPageNumbers from "@utils/getPageNumbers";
import slugify from "@utils/slugify";
import { SITE } from "@config";

export interface Props {
  post: CollectionEntry<"medias">;
}

export async function getStaticPaths() {
  const posts = await getCollection("medias", ({ data }) => !data.draft);
  const postResult = posts.map(post => ({
    params: { slug: slugify(post.data) },
    props: { post },
  }));

  const pagePaths = getPageNumbers(posts.length).map(pageNum => ({
    params: { slug: String(pageNum) },
  }));

  return [...postResult, ...pagePaths];
}

const { slug } = Astro.params;
const { post } = Astro.props;

const collection = "medias";
const title = "Les m√©dias";

const posts = await getCollection(collection);
const sortedPosts = getSortedPosts(posts);
const totalPages = getPageNumbers(sortedPosts.length);

const currentPage =
  slug && !isNaN(Number(slug)) && totalPages.includes(Number(slug))
    ? Number(slug)
    : 0;
const lastPost = currentPage * SITE.postPerPage;
const startPost = lastPost - SITE.postPerPage;

const paginatedPosts = sortedPosts.slice(startPost, lastPost);
---

{
  post ? (
    <Details post={post} />
  ) : (
    <List
      posts={paginatedPosts}
      title={title}
      collection={collection}
      pageNum={currentPage}
      totalPages={totalPages.length}
    />
  )
}
